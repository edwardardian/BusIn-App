<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userName_rateHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ahmad Mukafi Andrian"
        android:layout_toLeftOf="@+id/ratingBar_rateHistory"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="15dp" />

    <RatingBar
        android:id="@+id/ratingBar_rateHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:stepSize="1" />

    <TextView
        android:id="@+id/busName_rateHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar_rateHistory"
        android:text="Primajasa"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/comment_rateHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komentar nya disini lorem lorem ipsum ipsum lloremn ipsum"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/busName_rateHistory"
        android:layout_marginBottom="15dp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>