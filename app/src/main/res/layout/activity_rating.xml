<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    android:layout_centerHorizontal="true"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/ratingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Rate Your Trip !"
            android:textColor="@color/blue_secondary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratingSubTitle"
            android:layout_below="@id/ratingTitle"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="Your trip is complete! please give us your rate and feedback to improve our services." />


        <TextView
            android:id="@+id/rating_busName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingSubTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Bus Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rating_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingSubTitle"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/rating_busName"
            android:text="Passenger(s)"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rating_busName_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_busName"
            android:layout_marginStart="10dp"
            android:text="Primajasa"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue_secondary"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/rating_passenger_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_busName"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/rating_busName"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/blue_secondary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating_departureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_busName"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp"
            android:text="Departure Date"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rating_TicketStatus"
            android:layout_below="@id/rating_busName"
            android:layout_toRightOf="@id/rating_busName"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="Ticket Status" />

        <TextView
            android:id="@+id/rating_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_departureDate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="20/22/23"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/blue_secondary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_ratingStatus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/rating_departureDate"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/rating_busName"
            android:src="@drawable/baseline_check_box" />

        <TextView
            android:id="@+id/rating_TicketStatus_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_departureDate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/img_ratingStatus"
            android:textColor="#4FCA54"
            android:textStyle="bold"
            android:text="Issued" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_departureDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="14dp"
            android:text="Rate your trip"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingText"
            android:layout_marginLeft="10dp"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0" />

        <Button
            android:id="@+id/btnRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRating"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ratingBar">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:hint="Write your feedback ..." />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>